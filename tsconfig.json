{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [ 
      "vitest/importMeta"
      ,"jest"
    ],
    "incremental": true,
    "paths": {
      "~lib/*": ["./lib/*"],
      "~test/*": ["./test/*"],
    }
  },
  "include": ["lib/**/*.ts", "lib/**/*.d.ts", "src/**/*.ts", "test/**/*"],
  "files": ["node_modules/jest-extended/types/index.d.ts", ]
}
